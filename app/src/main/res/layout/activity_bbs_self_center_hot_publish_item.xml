<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="match_parent"
    android:paddingLeft="2dp"
    android:id="@+id/container"
    android:paddingRight="2dp"
    android:background="@color/crE9E9E9"
    android:fitsSystemWindows="true"
    tools:context="com.yan.campusbbs.module.MainActivity">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_publish_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_publish_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/cr4a000000"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/test_text"
        android:textColor="@color/crFFFFFF" />
</FrameLayout>
