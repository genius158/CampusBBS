<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/crE9E9E9"
    android:fitsSystemWindows="true"
    tools:context="com.yan.campusbbs.module.MainActivity">

    <include layout="@layout/common_app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/action_bar_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/setting_system_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:text="系统设置"
                android:textColor="@color/colorPrimary1"
                android:textSize="@dimen/text_size_sub_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="主题"
                android:textColor="@color/cr777777"
                android:textSize="@dimen/text_size_title" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/setting_skin_select1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="胖次蓝"
                    android:textColor="@color/colorPrimary1"
                    android:textSize="@dimen/text_size_sub_title"
                    app:theme="@style/ButtonColor1" />

                <RadioButton
                    android:id="@+id/setting_skin_select2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="少女粉"
                    android:textColor="@color/colorPrimary2"
                    android:textSize="@dimen/text_size_sub_title"
                    app:theme="@style/ButtonColor2" />


                <RadioButton
                    android:id="@+id/setting_skin_select3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="草苗绿"
                    android:textColor="@color/colorPrimary3"
                    android:textSize="@dimen/text_size_sub_title"
                    app:theme="@style/ButtonColor3" />


                <RadioButton
                    android:id="@+id/setting_skin_select4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="基佬紫"
                    android:textColor="@color/colorPrimary4"
                    android:textSize="@dimen/text_size_sub_title"
                    app:theme="@style/ButtonColor4" />


            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="10dp"
                android:background="@color/cr11000000" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="是否显示图片"
                    android:textColor="@color/cr777777"
                    android:textSize="@dimen/text_size_title" />

                <CheckBox

                    android:id="@+id/setting_img_show_control1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    app:theme="@style/ButtonColor1" />

                <CheckBox
                    android:id="@+id/setting_img_show_control2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    app:theme="@style/ButtonColor2" />

                <CheckBox
                    android:id="@+id/setting_img_show_control3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    app:theme="@style/ButtonColor3" />

                <CheckBox
                    android:id="@+id/setting_img_show_control4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="10dp"
                    app:theme="@style/ButtonColor4" />

            </FrameLayout>


        </LinearLayout>
    </ScrollView>


</android.support.design.widget.CoordinatorLayout>
