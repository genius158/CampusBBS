    <style name="ImageBase">
        <item name="actualImageScaleType">focusCrop</item>
        <item name="fadeDuration">200</item>
    </style>

    <style name="ImageBase.Circle">
        <item name="roundAsCircle">true</item>
    </style>

    <style name="ImageBase.Circle.Border">
        <item name="roundingBorderWidth">2dp</item>
        <item name="roundingBorderColor">@color/crC1FFFFFF</item>
    </style>

    <style name="TextShadow">
        <item name="android:shadowColor">@color/cr4a000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="TextShadow.TabTextShadow">
        <item name="android:shadowColor">@color/cr26000000</item>
    </style>

