    <style name="ImageBase">
        <item name="actualImageScaleType">focusCrop</item>
        <item name="fadeDuration">200</item>
    </style>

    <style name="ImageBase.Circle">
        <item name="roundAsCircle">true</item>
    </style>

    <style name="ImageBase.Circle.Border">
        <item name="roundingBorderWidth">2dp</item>
        <item name="roundingBorderColor">@color/crC1FFFFFF</item>
    </style>

    <style name="TextShadow">
        <item name="android:shadowColor">@color/cr4a000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="TextShadow.TabTextShadow">
        <item name="android:shadowColor">@color/cr26000000</item>
    </style>


    <style name="Ripple">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/cr11000000</item>
        <item name="mrl_rippleAlpha">0.05</item>
        <item name="mrl_rippleDimension">10dp</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleRoundedCorners">0dp</item>
        <item name="mrl_rippleInAdapter">false</item>
        <item name="mrl_rippleDuration">350</item>
        <item name="mrl_rippleFadeDuration">75</item>
        <item name="mrl_rippleDelayClick">false</item>
        <item name="mrl_rippleBackground">@color/cr00000000</item>
        <item name="mrl_ripplePersistent">false</item>
    </style>


    <style name="ButtonColor1">
        <item name="android:colorControlNormal">@color/colorPrimary1</item>
        <item name="android:colorAccent">@color/colorAccent1</item>
        <item name="android:colorControlActivated">@color/colorPrimaryDark1</item>
    </style>

    <style name="ButtonColor2">
        <item name="android:colorControlNormal">@color/colorPrimary2</item>
        <item name="android:colorAccent">@color/colorAccent2</item>
        <item name="android:colorControlActivated">@color/colorPrimaryDark2</item>
    </style>

    <style name="ButtonColor3">
        <item name="android:colorControlNormal">@color/colorPrimary3</item>
        <item name="android:colorAccent">@color/colorAccent3</item>
        <item name="android:colorControlActivated">@color/colorPrimaryDark3</item>
    </style>

    <style name="ButtonColor4">
        <item name="android:colorControlNormal">@color/colorPrimary4</item>
        <item name="android:colorAccent">@color/colorAccent4</item>
        <item name="android:colorControlActivated">@color/colorPrimaryDark4</item>
    </style>

</resources>
