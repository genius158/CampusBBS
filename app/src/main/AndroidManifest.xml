<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yan.campusbbs">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".ApplicationCampusBBS"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name=".FlashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".module.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustUnspecified|adjustPan" />

        <activity
            android:name=".module.setting.SettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.campusbbs.ui.selfcenter.SelfCenterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.campusbbs.ui.selfcenter.ui.friend.FriendsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".module.campusbbs.ui.selfcenter.ui.chat.ChatActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.search.SearchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.campusbbs.ui.selfcenter.ui.message.MessageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.campusbbs.ui.publish.PublishActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>